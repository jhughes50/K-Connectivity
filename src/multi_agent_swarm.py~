import numpy as np

class MultiAgentSwarm:

    def __init__(self, num_agents: int):

        self.num_agents = num_agents
        self.loctracker = {}
        self.typetracker = {}
        self.controltracker = {}

        self.sim_startup()

    def sim_startup(self):

        for i in range(self.num_agents):
            self.loctracker[i] = np.array((0,0,0))
            self.typetracker[i] = 0
            self.controltracker[i] = np.array((0,0,0))

    def set_locations(self, locations: list):
        for i,loc in enumerate(locations):
            self.loctracker[i] = loc

    def set_types(self, types: list):
        for i,t in enumerate(types):
            self.typetracker[i] = t

    def set_control(self, controls: list):
        for i, vel in enumerate(controls):
            self.controltracker[i] = vel
